# Example environment variables for local development
# Copy this file to .env in the same folder as manage.py (backend/) and fill values.

# Django secret key (keep private in production)
SECRET_KEY=django-insecure-please-change-this

# Debug mode (True/False)
DEBUG=True

# Comma-separated hosts (do NOT include port numbers). Example:
# ALLOWED_HOSTS=127.0.0.1,localhost,example.com
ALLOWED_HOSTS=127.0.0.1,localhost

# CORS allowed origins (comma-separated, include protocol and domain)
# For production, include your frontend URL
# Example: CORS_ALLOWED_ORIGINS=https://your-frontend.com,https://another-domain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Optional: Render external hostname when deployed to Render
RENDER_EXTERNAL_HOSTNAME=

# Database URL (leave empty to use default local sqlite)
# Examples:
#   sqlite: sqlite:///C:/path/to/db.sqlite3  (Windows absolute)
#   postgres: postgres://user:pass@host:5432/dbname
DATABASE_URL=

# Cloudinary (optional placeholders)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Any other environment variables used by your project can go here
