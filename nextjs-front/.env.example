# Environment Variables Example
# Copy this file to .env.local for local development
# Copy this file to .env.production for production deployment

# =============================================================================
# API Configuration
# =============================================================================

# Backend API URL (without trailing slash)
# Local: http://localhost:8000/api
# Production: https://your-backend.onrender.com/api
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# =============================================================================
# Site Configuration
# =============================================================================

# Frontend Site URL (used for SEO, sitemaps, Open Graph tags)
# Local: http://localhost:3000
# Production: https://your-site.com
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# =============================================================================
# Build Configuration
# =============================================================================

# Node environment
# Values: development | production
NODE_ENV=development

# Generate source maps for debugging
# Set to true in development, false in production
GENERATE_SOURCEMAP=true

# =============================================================================
# Optional: Analytics & Tracking (if you add these later)
# =============================================================================

# Google Analytics ID (optional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Tag Manager ID (optional)
# NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# =============================================================================
# Optional: Third-party Services (if you add these later)
# =============================================================================

# Cloudinary (if using for image optimization)
# NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name

# Sentry (for error tracking)
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
